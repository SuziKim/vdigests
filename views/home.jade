extends layout

block morecss
  != css('home')

block content
  
  h1#main-title Video Digests: A Browsable, Skimmable Format for Informational Lecture Videos
  #what-description Inspired by Bret Victor's presentation  
    a(href="http://worrydream.com/MediaForThinkingTheUnthinkable/") Media for Thinking the Unthinkable
    |, members of the  
    a(href="http://vis.berkeley.edu") VisLab
    |  at U.C. Berkeley created a set of video digest authoring tools.

  #main-video-wrapper
    iframe(width="640", height="360", src="//www.youtube.com/embed/fTlPJ7f9VsU9", frameborder="0", allowfullscreen)

  #read-the-paper
    .paper-icon
      a(href="http://vis.berkeley.edu/papers/videodigests/")
        img(src="http://192.241.199.43/img/paper.png")
    .paper-details
        h3
          a(href="http://vis.berkeley.edu/papers/videodigests/") Video Digests: A Browsable, Skimmable Format for Informational Lecture Videos
        p.authors Amy Pavel, Colorado Reed, Bjoern Hartmann, Maneesh Agrawala
        p.conference UIST 2014, October 2014
  
  #landing-description 
  #study-results
    .res-list-wrapper
        h2#example-vd-title Example Video Digests
        ul.res-list
          li
            .res-thumb-wrap
              img.thumb(src="http://192.241.199.43/img/hans-thumb.jpeg")
            .res-script-wrap
                h3 The Best Stats You've Ever Seen
                h3.vdauthor Hans Rosling
                p.vresult
                  | manually created video digest:  
                  a(href="/videodigests/view/The-Best-Stats-Youve-Ever-Seen-expert-KaZP9x9") view
                  |  |  
                  a(href="/videodigests/editor#edit/KaZP9x9") edit
                p.vresult
                  |auto-generated video digest:  
                  a(href="/videodigests/view/The-best-stats-youve-ever-seen-crowdsourced-xuTl2DM") view
                  |  |  
                  a(href="/videodigests/editor#edit/xuTl2DM") edit
          .clearfix
          li
            .res-thumb-wrap
              img.thumb(src="http://192.241.199.43/img/sk-thumb.jpeg")
            .res-script-wrap
                h3 The Power of Prototyping
                h3.vdauthor Scott Klemmer
                p.vresult
                    | manually created video digest:  
                    a(href="/videodigests/view/The-Power-of-Protyping-expert-Q_YIysi") view
                    |  |  
                    a(href="/videodigests/editor#edit/Q_YIysi") edit
                p.vresult
                    | auto-generated video digest:  
                    a(href="/videodigests/view/The-Power-of-Protyping-crowdsourced-xBkN85s") view
                    |  |  
                    a(href="/videodigests/editor#edit/xBkN85s") edit
          .clearfix 
          li
            .res-thumb-wrap
              img.thumb(src="http://192.241.199.43/img/khan-thumb.jpeg")
            .res-script-wrap
                h3 U.S. History Overview 1 - Jamestown to the Civil War
                h3.vdauthor Sal Khan
                p.vresult
                    | manually created video digest:  
